<!-- donde ocurre la magia -->
<table class="table table-bordered table-hover" align="center" border="1" style="width:1000px; height:50px; margin-top:5px;">
    <thead></thead>
    <tbody>
          <tr>
            <td><form action="/atencion/add" method="POST">
                <div class="col-sm-10">
                    <label for="exampleInputPhone" class="form-label mt-4">Atencion nÂ°</label>
                    <input type="text" name="idAtencionPaciente" value="<%= data.length + 1%>" class="form-control" autofocus>
                  </div>
                  <div class="form-group">
                    <label for="exampleSelect1" class="form-label mt-4">ID Registro</label>
                    <input type="text" name="RegistroIngreso_idRegistro" placeholder="ID del registro" class="form-control" autofocus>
                  </div>
                  <br>
                  <button onclick="tablamedico();" type="button" class="btn btn-primary btn-sm">ver medicos</button>
                  <div class="form-group">
                    <label for="exampleTextarea" class="form-label mt-4">Medico</label>
                    <input type="text" name="Medico_idMedico" placeholder="Identificacion del medico" class="form-control" autofocus>
                  </div>
                  <br>
                  <button onclick="tablaenfermero();" type="button" class="btn btn-primary btn-sm">ver enfermeros</button>
                  <div class="form-group">
                    <label for="exampleTextarea" class="form-label mt-4">Enfermero</label>
                    <input type="text" name="Enfermero_idEnfermero" placeholder="Identificacion del enfermero" class="form-control" autofocus>
                  </div>
                  <br>
                  <button onclick="tablamedicamento();" type="button" class="btn btn-primary btn-sm">ver medicamentos</button>
                  <div class="form-group">
                    <label for="exampleSelect1" class="form-label mt-4">Medicamento suministrado</label>
                    <input type="text" name="Medicamentos_Serial" placeholder="Serial del medicamento" class="form-control" autofocus>
                  </div>
                  <div class="form-group">
                    <label for="exampleSelect1" class="form-label mt-4">Descripcion</label>
                    <input type="text" name="Descripcion" placeholder="Descripcion" class="form-control" autofocus>
                  </div>
                  <div class="form-group">
                    <label for="exampleSelect1" class="form-label mt-4">Fecha de suministro</label>
                    <input type="date" name="Fecha_Dosis" placeholder="YYYY-MM-DD" class="form-control" autofocus>
                  </div>
				          <div class="form-group">
                    <label for="exampleSelect1" class="form-label mt-4">Estado</label>
                    <input type="text" name="Estado" placeholder="Atendida/EnAtencion/PorAtender" class="form-control" autofocus>
                  </div>
                  <br>
                <button type="submit" class="btn btn-primary">
                  Guardar atencion
                </button>
              </form></td>
          </tr>
