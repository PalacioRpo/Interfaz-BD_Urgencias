<table class="table table-bordered table-hover" align="center" border="1" style="width:1000px; height:50px;">
  <thead>
    <tr>
      <td>Atencion</td>
      <td>ID del Registro</td>
      <td>Medico</td>
      <td>Enfermero</td>
      <td>Medicamento</td>
      <td>Descripcion</td>
      <td>Fecha de suministro</td>
	    <td>Estado</td>
      <td>Actions</td>
    </tr>
  </thead>
  <tbody>
    <% if (data) { %>
      <% for(var i = 0; i < data.length; i++) { %>
        <tr>
          <td><%= data[i].idAtencionPaciente %></td>
          <td><%= data[i].RegistroIngreso_idRegistro %></td>
          <td><%= data[i].Medico_idMedico %></td>
          <td><%= data[i].Enfermero_idEnfermero %></td>
          <td><%= data[i].Medicamentos_Serial %></td>
          <td><%= data[i].Descripcion %></td>
          <td><%= data[i].Fecha_Dosis %></td>
		  <td><%= data[i].Estado %></td>
          <td>
            <a href="/atencion/update/<%= data[i].idRegistro %>" class="btn btn-info">Editar</a>
          </td>
        </tr>
      <% } %>
    <% } %>
  </tbody>
</table>

