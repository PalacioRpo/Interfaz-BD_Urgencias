<!doctype html>
<html lang="en">
    <head>
        <meta charset="utf-8">
        <meta name="viewport" content="width=device-width, initial-scale=1">
        <title>Paciente</title>
        <link rel="stylesheet" href="https://bootswatch.com/5/materia/bootstrap.min.css"
    </head>
    <body>
        <!-- barra de navegacion -->
    <nav class="navbar navbar-expand-lg navbar-dark bg-primary">
        <div class="container-fluid">
            <div class="collapse navbar-collapse" id="navbarColor01">
                <ul class="navbar-nav me-auto">
                <li class="nav-item">
                    <a class="navbar-brand" href="/" style=" margin-right:5px; margin-left:5px;"> < </a>
                </li>
                <li class="nav-item">
                    <a class="navbar-brand" href="/" align="left" style=" margin-right:5px; margin-left:5px;"> Paciente </a>
                </li>
                </ul>
            </div>
            </div>
        </nav>

<!-- donde ocurre la magia -->
<table class="table table-bordered table-hover" align="center" border="1" style="width:1000px; height:50px; margin-top:5px;">
    <thead></thead>
    <tbody>
            <tr>
                <td><form action="/paciente/update/<%= data.idPaciente%>" method="POST">
                    <div class="col-sm-10">
                        <label for="exampleInputPhone" class="form-label mt-4">Identificacion</label>
                        <input type="text" name="idPaciente" value="<%= data.idPaciente%>" class="form-control" autofocus>
                    </div>
                    <div class="form-group">
                        <label for="exampleTextarea" class="form-label mt-4">Nombres</label>
                        <input type="text" name="Nombres" value="<%= data.Nombres%>" class="form-control" autofocus>
                    </div>
                    <div class="form-group">
                        <label for="exampleSelect1" class="form-label mt-4">Apellidos</label>
                        <input type="text" name="Apellidos" value="<%= data.Apellidos%>" class="form-control" autofocus>
                    </div>
                    <div class="form-group">
                        <label for="exampleSelect1" class="form-label mt-4">Edad</label>
                        <input type="number" min = 1 name="Edad" value="<%= data.Edad%>" class="form-control" autofocus>
                    </div>
                    <div class="form-group">
                        <label for="exampleSelect1" class="form-label mt-4">Fecha de Nacimiento</label>
                        <input type="date" name="Fecha_nacimiento" value="<%= data.Fecha_nacimiento%>" class="form-control" autofocus>
                    </div>
                    <div class="form-group">
                        <label for="exampleSelect1" class="form-label mt-4">Enfermedades</label>
                        <input type="text" name="Enfermedades" value="<%= data.Enfermedades%>" class="form-control" autofocus>
                    </div>
                    <div class="form-group">
                        <label for="exampleSelect1" class="form-label mt-4">Tipo de Sangre</label>
                        <input type="text" name="Tipo_Sangre" value="<%= data.Tipo_Sangre%>" class="form-control" autofocus>
                    </div>
                    <br>
                    <button type="submit" class="btn btn-primary">
                    Guardar Paciente
                    </button>
                </form></td>
            </tr>
        </tbody>
    </table>

</body>
</html>