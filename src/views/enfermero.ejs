<!doctype html>
<html lang="en">
    <head>
        <meta charset="utf-8">
        <meta name="viewport" content="width=device-width, initial-scale=1">
        <title>Enfermero</title>
        <link rel="stylesheet" href="https://bootswatch.com/5/materia/bootstrap.min.css"
    </head>
    <body>
        <!-- barra de navegacion -->
    <nav class="navbar navbar-expand-lg navbar-dark bg-primary">
        <div class="container-fluid">
            <div class="collapse navbar-collapse" id="navbarColor01">
                <ul class="navbar-nav me-auto">
                <li class="nav-item">
                    <a class="navbar-brand" href="/" style=" margin-right:5px; margin-left:5px;"> < </a>
                </li>
                <li class="nav-item">
                    <a class="navbar-brand" href="/" align="left" style=" margin-right:5px; margin-left:5px;"> Enfermero </a>
                </li>
                </ul>
            </div>
            </div>
        </nav>
    <br>

<!-- donde ocurre la magia -->
<table class="table table-bordered table-hover" align="center" border="1" style="width:1000px; height:50px; margin-top:5px;">
    <thead></thead>
    <tbody>
            <tr>
                <td><form action="/enfermero/add" method="POST">
                    <div class="col-sm-10">
                        <label for="exampleInputPhone" class="form-label mt-4">Identificacion</label>
                        <input type="text" name="idEnfermero" placeholder="Identificacion" class="form-control" autofocus>
                    </div>
                    <div class="form-group">
                        <label for="exampleTextarea" class="form-label mt-4">Nombres</label>
                        <input type="text" name="Nombres" placeholder="Nombres" class="form-control" autofocus>
                    </div>
                    <div class="form-group">
                        <label for="exampleSelect1" class="form-label mt-4">Apellidos</label>
                        <input type="text" name="Apellidos" placeholder="Apellidos" class="form-control" autofocus>
                    </div>
                    <div class="form-group">
                        <label for="exampleSelect1" class="form-label mt-4">Edad</label>
                        <input type="number" min = 1 name="Edad" placeholder="Edad" class="form-control" autofocus>
                    </div>
                    <div class="form-group">
                        <label for="exampleSelect1" class="form-label mt-4">Fecha de Nacimiento</label>
                        <input type="date" name="Fecha_nacimiento" placeholder="Fecha de Nacimiento" class="form-control" autofocus>
                    </div>
                    <div class="form-group">
                        <label for="exampleSelect1" class="form-label mt-4">Turno</label>
                        <input type="text" name="Turno" placeholder="Dia/Tarde/Noche" class="form-control" autofocus>
                    </div>
                    <br>
                    <button type="submit" class="btn btn-primary">
                    Guardar Enfermero
                    </button>
                </form></td>
            </tr>
        </tbody>
    </table>

    <table class="table table-bordered table-hover" align="center" border="1" style="width:1000px; height:50px; margin-top:5px;">
        <thead>
            <tr>
                <td>Identificacion</td>
                <td>Nombres</td>
                <td>Apellidos</td>
                <td>Edad</td>
                <td>Fecha Nacimiento</td>
                <td>Turno</td>
            </tr>
            </thead>
            <tbody>
            <% if (data) { %>
                <% for(var i = 0; i < data.length; i++) { %>
                <tr>
                    <td><%= data[i].idEnfermero %></td>
                    <td><%= data[i].Nombres %></td>
                    <td><%= data[i].Apellidos %></td>
                    <td><%= data[i].Edad %></td>
                    <td><%= data[i].Fecha_nacimiento %></td>
                    <td><%= data[i].Turno %></td>
                    <td>
                    <a href="/enfermero/edit/<%= data[i].idEnfermero %>" class="btn btn-info">Editar</a>
                    <a href="/enfermero/delete/<%= data[i].idEnfermero %>" class="btn btn-danger">Borrar</a>
                    </td>
                </tr>
                <% } %>
            <% } %>
            </tbody>
        </table>
    </body>
</html>